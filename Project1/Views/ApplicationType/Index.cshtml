@model IEnumerable<ApplicationType>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">

        <div class ="col-6">
            <h2 class="text-primary"> Catogery List</h2>
        </div>
        <div class ="col-6 text-right" >
            <a asp-controller="applicationType" asp-action="create" class="btn btn-primary">
                  creat new Application Type
            </a>
        </div>
    </div>
    <br/>
    <br/>
 @if (Model.Count() > 0)
    {
        <table class="table tab-content table-striped " style="width:100%">
            <thead>
                <tr>
                    <th>Application Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                    <td style="width:50%">@item.Name</td>
                    <td></td>
                    </tr>
                }


            </tbody>
        </table>
    }

</div>
