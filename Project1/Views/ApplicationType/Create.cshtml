@model Project1.Models.ApplicationType

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form  method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Application Type</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name" ></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                    </div>

                </div>
            
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class ="btn btn-info w-100" value="create"/>                  
                        </div>
                        <div class="col">

                     <a asp-controller="ApplicationType" asp-action="index" class="btn btn-primary w-100 btn-success">Back</a>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>
</form>

